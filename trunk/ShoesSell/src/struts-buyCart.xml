<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.objectFactory" value="spring"></constant>
	<package name="buyCart" extends="struts-default">
		<action name="buyCartAction" class="butCartAction" method="addShoes">
			<result name="success">/onstage/shoppingCart.jsp </result>
		</action>
		<action name="delCart" class="butCartAction" method="delShoes">
			<result name="success">/onstage/shoppingCart.jsp </result>
		</action>
		<action name="updateCart" class="butCartAction" method="updateShoes">
			<result name="success">/onstage/shoppingCart.jsp </result>
		</action>

	</package>
</struts>
